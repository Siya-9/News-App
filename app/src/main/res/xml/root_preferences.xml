<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="User Preferences">
        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:title="Dark Mode"
            app:summaryOn="Turn off dark mode"
            app:summaryOff="Turn on dark mode"
            app:defaultValue="false"/>

        <ListPreference
            app:key="country_code"
            app:defaultValue="in"
            app:entries="@array/country_entries"
            app:entryValues="@array/country_values"
            app:title="Country"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="language"
            app:defaultValue="en"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:title="Language"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>